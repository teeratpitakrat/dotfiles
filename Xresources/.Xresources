URxvt.font: xft:Droid sans mono dotted:size=11:antialias=true:hinting=true:autohint=true
URxvt.boldFont: xft:Droid sans mono dotted:bold:size=11:antialias=true:hinting=true:autohint=true

URxvt*background: #333333
URxvt*foreground: white

! black
URxvt.color0:  #2E3436
URxvt.color8:  #555753
! red
URxvt.color1:  #a40000
URxvt.color9:  #EF2929
! green
URxvt.color2:  #4E9A06
URxvt.color10: #8AE234
! yellow
URxvt.color3:  #C4A000
URxvt.color11: #FCE94F
! blue
URxvt.color4:  #3465A4
URxvt.color12: #729FCF
! purple
URxvt.color5:  #AD7FA8
URxvt.color13: #9B7297
! orange (replaces cyan)
URxvt.color6:  #ce5c00
URxvt.color14: #fcaf3e
! white
URxvt.color7:  #babdb9
URxvt.color15: #EEEEEC

URxvt.scrollBar: false
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt*saveLines: 1000000

URxvt.perl-ext-common:  ...,font-size,...
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease

URxvt.keysym.C-Left:    \033[1;5D
URxvt.keysym.C-Right:    \033[1;5C

URxvt.keysym.Home:  \033[1~
URxvt.keysym.End:   \033[4~

URxvt.cursorBlink: 1
